<link rel="stylesheet" href="/stylesheets/detail.css">
<script type="text/javascript" src="/javascripts/count.js"></script>
<script type="text/javascript" src="/javascripts/order.js"></script>

<div class="container">
    <div class="view">
        <div class="goods-img">
            <img src="/images/돈가스.jpg" alt="">
        </div>

        <div class="goods-content">

            <h3>
                <p>간단히 해먹을 수 있는 돈가스</p>
            </h3>

            <div class="info">
                쉽고 간편한 1인분의 돈가스
            </div>

            <div class="price-box">
                <h3>가격 40,000원</h3>
            </div>

            <div class="rating">
                5.0
            </div>

            <div class="price-total">
                <div class="price-zone">
                    <h3>수량 : </h3>
                    <div class="count">
                        <input type="number" id="order_count" value="1" min="1">
                        <span>
                            <button value="증가" onclick="count_up()"></button>
                            <button value="감소" onclick="count_down()"></button>
                        </span>
                    </div>
                </div>
                <div class="total-price">
                    금액 : <input type="text" class="price" value="40,000" readonly style="outline: none;">
                </div>
            </div>

            <div class="choice">
                <button class="choice-btn" onclick="basket('/basket/', 'amount');">장바구니</button>
                <button class="choice-btn" onclick="order('/order/', 'amount');">바로주문</button>
            </div>

        </div>
    </div>
</div>

<div class="container">
    <div class="review">
        <div class="title">
            <h3>리뷰</h3>
            <p>개수</p>
        </div>

        <% for(var i = 0; i < 4; i++) { %>
        <div class="review-content">
            <div class="review-detail">
                <img src="/images/tomato.png" alt="" class="review-img">
                <h3>user_name</h3>
                <span>
                    rating
                </span>
                <p>date</p>
            </div>

            <div class="content">
                <p>content</p>
            </div>
        </div>
        <% } %>

    </div>
</div>

<div class="container">
    <div class="title">
        <h3>재료</h3>
    </div>
    <div class="ingre-container">
        <div class="ingredient">
            <dl>
                <dt>
                    [재료]
                </dt>
                <dd>
                    삼겹살, 삼겹살
                </dd>
            </dl>
        </div>
    </div>
</div>

<div class="container">
    <div class="title">
        <h3>상세정보</h3>
    </div>
    <% for(var i = 0; i < 5; i++) { %>
    <div class="step">
        <div class="step-count">
            <h3><%=i+1%></h3>
            <p>step<%=i+1%></p>
        </div>

        <div class="step-img">
            <img src="/images/tomato.png" alt="">
        </div>
    </div>
    <% } %>
</div>