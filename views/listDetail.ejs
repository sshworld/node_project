<link rel="stylesheet" href="/stylesheets/detail.css">
<script type="text/javascript" src="/javascripts/count.js"></script>

<div class="container">
    <div class="view">
        <div class="goods-img">
            <img src="/images/tomato.png" alt="">
        </div>

        <div class="goods-content">
            <h3>
                <p>title</p>
            </h3>

            <div class="info">
                sub info
            </div>

            <div class="price-box">
                <h3>price ex) 40,000won</h3>
            </div>

            <div class="rating">
                rating info
            </div>

            <div class="price-total">
                <div class="price-zone">
                    <h3>수량 : </h3>
                    <div class="count">
                        <input type="number" id="order_count" value="1" min="1">
                        <span>
                            <button value="증가" onclick="count_up()"></button>
                            <button value="감소" onclick="count_down()"></button>
                        </span>
                    </div>
                </div>
                <div class="total-price">
                    금액 : <input type="text" class="price" value="price">
                </div>
            </div>

            <div class="choice">
                <button class="choice-btn">장바구니</button>
                <button class="choice-btn">바로주문</button>
            </div>

        </div>
    </div>
</div>