<link rel="stylesheet" href="/stylesheets/orderList.css">
<link rel="stylesheet" href="/stylesheets/basketList.css">
<link rel="stylesheet" href="/stylesheets/mycard.css">
<link rel="stylesheet" href="/stylesheets/MyPage.css">

<style>
    .sidebar a:nth-child(<%=pageCount %>) {
        color: orangered;
    }
</style>

<div class="mypage">


    <div class="user">
        <div>
            <h1><%= myPageInfo.userName[0].user_name%>님의 MyPage</h1>
            <a href="#">수정하기</a>
        </div>
    </div>

    <div class="mypage-content">
        <div class="sidebar">
            <a href="/user/orderList">주문 내역 조회</a>
            <a href="/user/basketList">장바구니 조회</a>
            <a href="/user/orderReview">구매 후기</a>
            <a href="/user/mycard">카드 내역</a>
            <a href="/user/myaddr">배송지 내역</a>
        </div>

        <div class="container">
            <% if(pageCount == 1) { %>
            <%- include('../views/orderList')%>
            <% } else if(pageCount == 2) { %>
            <%- include('../views/basketList')%>
            <% } else if(pageCount == 3) { %>
            <%- include('../views/orderReview')%>
            <% } else if(pageCount == 4) { %>
            <%- include('../views/mycard')%>
            <% } else if(pageCount == 5) { %>
            <%- include('../views/myaddr')%>
            <% } else { %>
            <%- include('../views/orderList')%>
            <%- include('../views/basketList')%>
            <%- include('../views/orderReview')%>
            <%- include('../views/mycard')%>
            <%- include('../views/myaddr')%>
            <% } %>
        </div>
    </div>
</div>