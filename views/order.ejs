<link rel="stylesheet" href="/stylesheets/order.css">

<form action="">
    <div class="container">
        <div class="view">
            <div class="goods-img">
                <img src="/images/tomato.png" alt="">
            </div>

            <div class="goods-content">
                <h3>
                    <p>title</p>
                </h3>

                <div class="info">
                    sub info
                </div>

                <div class="price-box">
                    <h3>price ex) 40,000won</h3>
                </div>

                <div class="price-total">
                    <div class="price-zone">
                        <h3>수량 : </h3>
                        <div class="count">
                            <input type="text" id="order_count" value="1" readonly style="outline: none;">
                        </div>
                    </div>
                    <div class="total-price">
                        금액 : <input type="text" class="price" value="price" readonly style="outline: none;">
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="info-container">
            <div class="title">
                <h3>배송지 정보</h3>
            </div>

            <div class="content">
                <div class="detail">
                    <label for="">배송지 : </label>
                    <select name="order" class="order" id="order-addr" onchange="addr()">
                        <option value="0" selected>sdfs</option>
                        <% for(var i = 1; i < 4; i++) { %>
                        <option value="<%=i%>"><%=i%></option>
                        <% } %>
                    </select>
                </div>

                <div class="detail">
                    <label for="">우편번호 : </label>
                    <input type="text" id="shipping_num" name="shipping_num" value="58132" readonly required="required">
                </div>

                <div class="detail">
                    <label for="">기본주소 : </label>
                    <input type="text" id="basic_addr" name="basic_addr" value="Gwangjangro21bungil 46 " readonly
                        required="required">
                </div>

                <div class="detail">
                    <label for="">상세주소 : </label>
                    <input type="text" id="detail_addr" name="detail_addr" value="centerm apartment 1504ho" readonly
                        required="required">
                </div>
            </div>

        </div>

        <div class="info-container">
            <div class="title">
                <h3>카드 정보</h3>
            </div>

            <div class="content">
                <div class="detail">
                    <label for="">카드 : </label>
                    <select name="order" class="order" id="order-card" onchange="addr()">
                        <option value="0" selected>sdfs</option>
                        <% for(var i = 1; i < 4; i++) { %>
                        <option value="<%=i%>"><%=i%></option>
                        <% } %>
                    </select>
                </div>

                <div class="detail">
                    <label for="">카드번호 : </label>
                    <input type="text" id="card_num" name="card_num" value="58132" readonly required="required">
                </div>

                <div class="detail">
                    <label for="">유효기간 : </label>
                    <input type="text" id="card_date" name="card_date" value="Gwangjangro21bungil 46 " readonly
                        required="required">
                </div>

                <div class="detail">
                    <label for="">카드종류 : </label>
                    <input type="text" id="card_type" name="card_type" value="centerm apartment 1504ho" readonly
                        required="required">
                </div>
            </div>

            <div class="choice">
                <button type="submit" class="choice-btn">주문하기</button>
            </div>

        </div>
    </div>
</form>

<script>
    function addr() {
        var select = document.getElementById('order-addr')

        var selectValue = select.options[select.selectIndex].value

        var shipping_num = document.getElementById('shipping_num')

